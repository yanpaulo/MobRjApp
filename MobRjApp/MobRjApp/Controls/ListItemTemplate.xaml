<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobRjApp.Controls.ListItemTemplate">
    <ContentView.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Image Grid.Column="0" Source="{Binding Fields.ThumbnailUrl}" WidthRequest="80" HeightRequest="56"></Image>

            <StackLayout Grid.Column="1">
                <Label Text="{Binding Fields.Sigla}" FontAttributes="Bold"></Label>
                <Label Text="{Binding Fields.Capital}"></Label>
            </StackLayout>
        </Grid>
  </ContentView.Content>
</ContentView>